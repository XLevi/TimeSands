<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="progress" format="integer"/>
    <attr name="progressMax" format="integer"/>
    <attr name="progressWidth" format="dimension"/>
    <attr name="progressRadius" format="dimension"/>
    <attr name="progressTextSize" format="dimension"/>
    <attr name="progressColor" format="color"/>
    <attr name="progressTextColor" format="color"/>
    <attr name="progressBackgroundColor" format="color"/>

    <declare-styleable name="OProgressBar">
        <attr name="progress"/>
        <attr name="progressMax"/>
        <attr name="progressTextSize"/>
        <attr name="progressRadius"/>
        <attr name="progressWidth"/>
        <attr name="progressColor"/>
        <attr name="progressTextColor"/>
        <attr name="progressBackgroundColor"/>
    </declare-styleable>

    <declare-styleable name="EasyPickerView">
        <attr name="epvTextSize" format="dimension"/>
        <attr name="epvTextColor" format="color"/>
        <attr name="epvTextPadding" format="dimension"/>
        <attr name="epvTextMaxScale" format="float"/>
        <attr name="epvTextMinAlpha" format="float"/>
        <attr name="epvRecycleMode" format="boolean"/>
        <attr name="epvMaxShowNum" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="mode" format="integer"/>
        <attr name="radius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color"/>
    </declare-styleable>

</resources>